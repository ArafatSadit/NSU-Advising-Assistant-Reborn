{
  "manifest_version": 2,
  "name": "NSU Advising Assistant",
  "version": "2.2.0",
  "description": "Automated course registration monitoring system",
  "browser_specific_settings": {
    "gecko": {
      "id": "nsu-advising-assistant@local",
      "strict_min_version": "102.0"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "https://rds3.northsouth.edu/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://rds3.northsouth.edu/*"],
      "js": ["content.js"]
    }
  ]
}
